//mui sitewide overrides
.btn 
  color $white;
  background-color $yellow
  font-weight: bold
  transition: background-color 0.2s ease-in-out
  &:hover 
    color white;
    background-color $yellow-dark
  &-secondary
    background-color: transparent !important;
    border solid 1px $yellow
    color $white
  .no-style
    background-color transparent 
    border none 
    outline none;
  i 
    position relative
    font-size 18px;
    left -4px
  &-xlarge
    width px-to-rem(100px) !important
    height px-to-rem(100px) !important
    i
      font-size px-to-rem(64px) !important
  &.no-text 
    display inline-flex;
    justify-content: center;
    align-items: center;
    i 
      font-size: px-to-rem(28px)
      top 0;
      margin 0;
      left 0;
  +.btn    
    margin-left 8px; 
.link-btn 
  color $yellow;
  background-color transparent;
  padding 0;
  outline none;
  border none;
