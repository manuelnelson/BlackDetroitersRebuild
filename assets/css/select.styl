  //select
  .input-field.select
    margin-top px-to-rem(30px)
    margin-bottom px-to-rem(30px)
    position: relative;
    overflow:  visible;
    top: 8px;
    color: white;
    +.input-field.select
      margin-top: 0
    svg 
      position absolute
      right 0;
      fill white;
      top 14px
    .select-dropdown.dropdown-trigger
      color $text-color
      padding 6px 0
      border-bottom: 1px solid white
    select.browser-default
      opacity: 0
      position: absolute
      top 0
      left 0
      color black;
      width 100%;
      height 100%
      -webkit-appearance: menulist-button
      z-index: 100
      cursor: pointer;
      background-color: $select-background-color !important;
    label 
      color $text-color 
      transform: translateY(-24px) scale(0.7)
      font-weight: bold
    .select__item
      background-color black
      color white;
      padding: 0px 8px;
      margin-right: 4px;
      display: inline-flex;
      align-items: center;
      position relative;
      z-index 101
      cursor pointer;
      i.material-icons
        color $text-color !important;
          // color $select-color !important
    .mui-select__menu
      max-height 0 !important; 
      transition max-height 0.15s ease-in-out;
      padding 0 !important;
      div.mui--is-selected
        background-color white !important;
      &:hover
        background-color var(--secondary-lighter) !important;